<% if @promotions.empty? %>
    <h3>Nenhuma promoção cadastrada</h3>
<% end %>

<%= link_to 'Registrar uma promoção', new_promotion_path %>

<%= form_with url: search_promotions_path, method: :get do |f| %>
<%= f.label :query, 'Busca' %>
<%= f.text_field :query %>
<%= f.submit 'Buscar' %>
<% end %>

<%= render @promotions %>

<div><%= link_to 'Voltar', root_path %></div>