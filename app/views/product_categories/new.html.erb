<h1>Registrar uma Categoria de Produto</h1>

<% if @product_category.errors.any? %>
    <h2>Não foi possível salvar, encontramos algun(s) erro(s): </h2>
    <ul>
        <% @product_category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @product_category do |f| %>
    <div>
        <%= f.label :name, 'Nome' %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :code, 'Código' %>
        <%= f.text_field :code %>
    </div>
    <div>
        <%= f.submit 'Criar Categoria' %>
    </div>
<% end %>