<h1>Atualizar <%= @product_category.name %></h1>

<% if @product_category.errors.any? %>
    <h2>Não foi possível salvar, encontramos algun(s) erro(s): </h2>
    <ul>
        <% @product_category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= render "form" %>